extends ../../layouts/home-layout

block content
  
  // Main Content
  .container
    .row
      .col-lg-8.col-md-10.mx-auto
        each post in posts
          .post-preview
            a(href=`/${post.slug}`)
              h2.post-title(style="font-size:25px!important;")
                | #{post.title}
              h3.post-subtitle(style="font-size:17px!important;")
                | #{post.desc}
            p.post-meta
              
              a(href='#') #{post.author} 
              | tarafından 
              | #{post.date} tarihinde paylaşıldı.
          hr
        
        //- // Pager
        //- .clearfix
        //-   a.btn.btn-primary.float-right(href='#') Older Posts &rarr;
  hr
  
  
